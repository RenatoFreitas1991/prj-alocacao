{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "types": ["@types/node"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["types/**/*.d.ts", "src/**/*", "src/**/*.ts", "global.d.ts", "src", "env.d.ts"]
}
